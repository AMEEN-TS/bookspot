<div class="card shadow mb-4 mt-5 mx-5 ">
                        <div class="card-header py-3 d-flex justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">ORDER MANAGEMENT</h6>
                       
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="userTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Order ID & Date</th>
                                            <th>User</th>
                                            <th>Total</th>
                                            <th>Payment</th>
                                            <th>Payment Status</th>
                                            <th>Details</th>
                                         
                                           

                                        </tr>
                                    </thead>
                                    
                                    <tbody>
                                        {{#each allorders}}
                                        <tr>
                                            <td>ID: {{this._id}} <br>Date: {{this.ordered_on}}</td>
                                            
                                            <td>{{this.deliveryDetails.name}} <br>{{this.deliveryDetails.email}}</td>
                                            <td>{{this.grandTotal}}</td>
                                            <td>{{this.paymentMethod}}</td>
                                            {{!-- {{#each product}}
                                            <td>{{this.status}}</td>
                                            {{/each}} --}}
                                            <td>{{this.payment_status}}</td>
                                           <td><a href="/admin/viewOrderProducts/{{this._id}}" class="btn btn-primary">Details</a></td>
                                        </tr>
                                        {{/each}}
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>