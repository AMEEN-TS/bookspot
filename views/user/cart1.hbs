        $.ajax({
          url: '/change-product-quantity',
          data: {
            cartid: cartid,
            product: proId,
            quantity: quantity,
            count: count
          }, method: 'post',
          success: (response) => {
            if (response.removeProduct) {
              alert('Product removed from the cart')
              location.reload();
            } else {
              location.reload();
            }

          }
        })
      } 
    </script>
