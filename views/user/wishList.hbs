	<script>
    // delete popup
    function removeProductforwishlist(proId) {
					Swal.fire({
						title: 'Are you sure?',
						text: "You won't be able to revert this!",
						icon: 'warning',
						showCancelButton: true,
						confirmButtonColor: '#3085d6',
						cancelButtonColor: '#d33',
						confirmButtonText: 'Yes, delete it!'
					}).then((result) => {
						if (result.isConfirmed) {
							
							  
								removeProductforwis()
							
						}
					})
 

		function removeProductforwis() {
			{{!-- alert(proId) --}}
         $.ajax({
            url: "/deletewishlist",
            data: {
              proId: proId,
            },
            method: "post",
            success: (Response) => {
              if (Response) {
                {{!-- alert('product removed from cart') --}}
                location.reload()
              }
            }
          })     
				}
		}
